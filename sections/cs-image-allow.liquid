<style>
    .section--{{ section.id }} {
        background-image: url({{ section.settings.image | img_url: '2000x' }});
        background-color: {{ section.settings.background_c }};
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media (max-width: 767px) {
        .section--{{ section.id }} {
            padding-top: {{section.settings.padding_top_m}}px;
            padding-bottom: {{section.settings.padding_bottom_m}}px
        }
    }
</style>
{{'cs-image-allow.css'| asset_url | stylesheet_tag }}


<div class="section--{{ section.id }} custom-container">
    <div class="custom-image-allow">
        <a class="watch-lightbox-link w-inline-block w-lightbox" href="javascript:;" >
            {%- if section.settings.image_allow -%}
                {{ section.settings.image_allow | img_url: '200x' | img_tag }}
            {%- endif -%}
        </a>
    </div>
</div>

{% schema %}
    {
        "name": "Image allow",
        "class": "image-allow",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
          },
          {
            "type": "image_picker",
            "id": "image_allow",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }

        ],
        "presets": [
            {
                "name": "Image allow"
            }

        ]
    }
{% endschema %}
