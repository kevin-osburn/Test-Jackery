<style>
    .custom-image-banner-two {
        background-image: url({{ section.settings.bg_image | img_url: '2000x' }});
    }
</style>
{{'cs-image-banner-two.css'| asset_url | stylesheet_tag }}

<div class="section--{{ section.id }}">
    <div class="custom-image-banner-two">
        <div class="content">
            <div class="header">
                {% if section.settings.logo %}
                    {{ section.settings.logo | img_url: '350x' | img_tag }}
                {% endif %}
                {% if section.settings.title %}
                    <h1 class="title">{{ section.settings.title }}</h1>
                {% endif %}
            </div>
            <div class="item">
                {% if section.settings.subtitle %}
                    <h2 class="subtitle">{{ section.settings.subtitle }} </h2>
                {% endif %}
                {% if section.settings.text %}
                    <div class="text"> {{ section.settings.text }} </div>
                {% endif %}
            </div>
            <div class="sub-btn">
                {% if section.settings.btn_name %}
                    <a class="custom-btn" href="{{ section.settings.btn_link }}" style="color: {{ section.settings.btn_color}}; background: {{ section.settings.btn_bg }};">{{ section.settings.btn_name }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="31" height="31" viewBox="0 0 31 31" fill="black">
                        <g clip-path="url(#clip0_68_89)"  fill="black">
                        <path   fill="black" d="M30.7951 15.0033L23.7498 7.95795C23.4967 7.66242 23.052 7.62797 22.7564 7.88112C22.4609 8.1342 22.4265 8.57897 22.6796 8.87449C22.7032 8.90204 22.7289 8.92777 22.7564 8.95132L28.597 14.799H0.704511C0.315444 14.799 0 15.1144 0 15.5035C0 15.8927 0.315444 16.208 0.704511 16.208H28.597L22.7564 22.0486C22.4609 22.3017 22.4265 22.7464 22.6796 23.042C22.9328 23.3375 23.3775 23.3719 23.673 23.1188C23.7005 23.0952 23.7263 23.0695 23.7498 23.042L30.7952 15.9966C31.0683 15.7219 31.0683 15.2781 30.7951 15.0033Z" fill="white"></path>
                        </g>
                        <defs>
                        <clipPath id="clip0_68_89">
                            <rect width="31" height="31" fill="black"></rect>
                        </clipPath>
                    </defs>
                    </svg>
                 </a>
                {% endif %}
            </div>
            {% if section.settings.description %}
                <p class="description"> {{ section.settings.description }} </p>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Image banner two",
        "class": "image-banner-two",
        "settings": [
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background image"
            },
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "text",
                "id": "btn_name",
                "label": "Button Name",
                "default": "order now"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            },
            {
                "type": "color",
                "id": "btn_color",
                "label": "Button color",
                "default": "#000"
            },
            {
                "type": "color",
                "id": "btn_bg",
                "label": "Button background color",
                "default": "#fff"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description"
            }
        ],
        "presets":[
            {
                "name": "Image banner two"
            }
        ]
    }
{% endschema %}
