<style>
    {% for block in section.blocks %}
      {% assign color_name = block.settings.title %}[data-color-name="{{ color_name }}"],
      [data-color-name="{{ color_name }}"] > label {
        background-color: {{ block.settings.color }} !important;
        {% if block.settings.image != blank %}
          background-image: url('{{ block.settings.image | img_url: '50x' }}') !important;
        {% endif %}
      }
      [data-color-swatch="{{ color_name }}"] {
        color: {{ block.settings.color }} !important;
      }
     
    {% endfor %}
</style>

  
  {% schema %}
    {
      "name": "Color Swatch",
      "class": "color-swatch",
      "settings": [],
      "blocks": [
        {
          "type": "color-swatch",
          "name": "Color Swatch",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Color Name"
            }, {
              "type": "image_picker",
              "id": "image",
              "label": "Color Image"
            }, {
              "type": "color",
              "id": "color",
              "label": "Color",
              "default": "transparent"
            }
          ]
        }
      ],
      "presets": [
        {
            "name": "Color Swatch"
        }
      ]
    }
  {% endschema %}
  
  
  