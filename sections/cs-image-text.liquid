{{'cs-image-text.css'| asset_url | stylesheet_tag }}

<div class="section--{{ section.id }}">
    <div class="custom-image-text">
        <div class="left-item">
            {{ section.settings.image | img_url: '2000x' |img_tag }}
        </div>
        <div class="right-item">
            {% if section.settings.title %}
                <h1 class="title"> {{ section.settings.title }} </h1>
            {% endif %} 
            {% if section.settings.text %}
                <div class="text"> {{ section.settings.text }} </div>
            {% endif %}
            <div class="image-text">           
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'item' %}  
                    <div class="image-text-item">
                        {% if block.settings.image %}
                            {{ block.settings.image | img_url: '350x' |img_tag }}
                        {% endif %}                    
                        {%- if block.settings.title -%}
                                <p class="content-title">{{ block.settings.title }}</p>
                        {%- endif -%}
                       
                    </div>
                    {% when 'button' %}  
                    <a class="custom-btn" href="{{ block.settings.btn_link }}" style="color: {{ block.settings.btn_color}}; background: {{ block.settings.btn_bg }};">{{ block.settings.btn_name }}
                        <svg xmlns="http://www.w3.org/2000/svg" width="31" height="31" viewBox="0 0 31 31" fill="none">
                            <g clip-path="url(#clip0_68_89)">
                            <path d="M30.7951 15.0033L23.7498 7.95795C23.4967 7.66242 23.052 7.62797 22.7564 7.88112C22.4609 8.1342 22.4265 8.57897 22.6796 8.87449C22.7032 8.90204 22.7289 8.92777 22.7564 8.95132L28.597 14.799H0.704511C0.315444 14.799 0 15.1144 0 15.5035C0 15.8927 0.315444 16.208 0.704511 16.208H28.597L22.7564 22.0486C22.4609 22.3017 22.4265 22.7464 22.6796 23.042C22.9328 23.3375 23.3775 23.3719 23.673 23.1188C23.7005 23.0952 23.7263 23.0695 23.7498 23.042L30.7952 15.9966C31.0683 15.7219 31.0683 15.2781 30.7951 15.0033Z" fill="white"></path>
                            </g>
                            <defs>
                            <clipPath id="clip0_68_89">
                                <rect width="31" height="31" fill="white"></rect>
                            </clipPath>
                        </defs>
                        </svg>
                    </a>
                   

                {% endcase %} 
                {% endfor %}
            </div>
            {% if section.settings.description %}
                <p class="description"> {{ section.settings.description }} </p>
            {% endif %}
        </div>
        
    </div>

</div>

{% schema %}
    {
        "name": "Image text",
        "class": "image-text",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description"
            }
            
        ],
        "blocks": [
            {
                "type": "item",
                "name": "item",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text"
                    }
                  
                ]
            },
            {
                "type": "button",
                "name": "button",
                "settings": [
                    {
                        "type": "text",
                        "id": "btn_name",
                        "label": "Button Name",
                        "default": "order now"
                    },
                    {
                        "type": "url",
                        "id": "btn_link",
                        "label": "Link"
                    },
                    {
                        "type": "color",
                        "id": "btn_color",
                        "label": "Button color",
                        "default": "#fff"
                    },
                    {
                        "type": "color",
                        "id": "btn_bg",
                        "label": "Button background color",
                        "default": "#000" 
                    }

                ]
            }
        ],
        "presets": [
            {
                "name": "Custom Image Text"
            }
        ]
        
    }
{% endschema %}
